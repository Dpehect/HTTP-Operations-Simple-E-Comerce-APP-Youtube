<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Ürün Yönetimi</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <h1>Ürün Listesi</h1>
    <a href="/add">Yeni Ürün Ekle</a>
    <table>
      <thead>
        <tr>
          <th>Ürün Adı</th>
          <th>Fiyatı</th>
          <th>Açıklama</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= product.description %></td>
            <td><a href="/edit/<%= product._id %>">Düzenle</a></td>
            <td>
              <form action="/<%= product._id %>?_method=DELETE" method="POST">
                <button type="submit">Sil</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
